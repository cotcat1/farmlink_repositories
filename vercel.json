{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "buildCommand": "composer install && php artisan migrate"
}
